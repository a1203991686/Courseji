<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@drawable/view_shape">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
        <TextView
          android:id="@+id/leave_lesson"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="英语"
          android:textSize="17sp"
          android:textColor="@android:color/black"
          android:paddingLeft="20dp"
          android:paddingTop="10dp"
          android:paddingRight="20dp" />
        <TextView
          android:id="@+id/leave_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="病假"
          android:background="@drawable/orange_flag"
          android:textSize="16sp"
          android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="20dp"
      android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@mipmap/teacher" />

        <TextView
          android:id="@+id/leave_teacher"
          android:layout_marginLeft="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="李老师" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="20dp"
      android:paddingBottom="10dp"
      android:orientation="horizontal">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@mipmap/time" />

        <TextView
          android:id="@+id/leave_time"
          android:layout_marginLeft="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2020-12-2 10:00" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginBottom="10sp"
      android:orientation="horizontal">
        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@mipmap/leave_situation" />
        <TextView
          android:id="@+id/leave_reason"
          android:layout_marginLeft="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="因为发烧感冒请假去医院" />
    </LinearLayout>

</LinearLayout>


