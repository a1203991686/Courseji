<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="140dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_marginStart="15dp"
  android:layout_marginEnd="15dp"
  android:layout_marginTop="15dp"
  app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
          android:id="@+id/middle_item_guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
          android:id="@+id/middle_item_guideline1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
          android:id="@+id/middle_item_guideline2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
          android:id="@+id/middle_item_guideline3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.1" />
        <androidx.constraintlayout.widget.Guideline
          android:id="@+id/middle_item_guideline4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.5" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:layout_marginEnd="10dp"
          android:paddingStart="4dp"
          android:paddingEnd="4dp"
          android:paddingBottom="0dp"
          android:paddingTop="0dp"
          android:textColor="#fff"
          android:background="@color/Ongoing"
          android:textSize="15sp"
          android:id="@+id/middle_item_stateButton"
          app:layout_constraintTop_toBottomOf="@id/middle_item_theme"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline1" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:background="@color/Ongoing"
          android:id="@+id/middle_item_viewColor"
          app:layout_constraintEnd_toStartOf="@id/middle_item_guideline"
          app:layout_constraintStart_toStartOf="parent" />

        <TextView
          android:id="@+id/middle_item_theme"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="10dp"
          android:text="@string/text"
          android:textSize="20sp"
          android:textColor="?android:attr/textColorPrimary"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline"
          app:layout_constraintTop_toTopOf="parent" />

        <Button
          android:layout_width="21dp"
          android:layout_height="21dp"
          android:id="@+id/middle_labelButton"
          app:layout_constraintTop_toBottomOf="@id/middle_item_theme"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/middle_label" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="?android:attr/textColorPrimary"
          android:textSize="15sp"
          android:id="@+id/middle_item_labelTextView"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          app:layout_constraintStart_toEndOf="@id/middle_labelButton"
          app:layout_constraintTop_toBottomOf="@id/middle_item_theme" />

        <Button
          android:layout_width="21dp"
          android:layout_height="21dp"
          android:id="@+id/middle_timeButton"
          app:layout_constraintTop_toBottomOf="@id/middle_labelButton"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/middle_time" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="?android:attr/textColorPrimary"
          android:textSize="15sp"
          android:id="@+id/middle_item_timeTextView"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          app:layout_constraintStart_toEndOf="@id/middle_timeButton"
          app:layout_constraintTop_toBottomOf="@id/middle_item_labelTextView" />

        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#F1EFEF"
          android:id="@+id/middle_item_details"
          android:layout_marginTop="10dp"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline"
          app:layout_constraintEnd_toStartOf="@id/middle_item_guideline2"
          app:layout_constraintTop_toBottomOf="@id/middle_timeButton"
          app:layout_constraintBottom_toBottomOf="parent" />
        <View
          android:layout_width="1dp"
          android:layout_height="0dp"
          android:background="#C6C6C6"
          android:layout_marginTop="10dp"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline2"
          app:layout_constraintTop_toBottomOf="@id/middle_timeButton"
          app:layout_constraintBottom_toBottomOf="parent" />
        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#F1EFEF"
          android:id="@+id/middle_item_sign"
          android:layout_marginTop="10dp"
          android:layout_marginStart="1dp"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/middle_timeButton"
          app:layout_constraintBottom_toBottomOf="parent" />
        <Button
          android:layout_width="22sp"
          android:layout_height="22sp"
          android:background="@drawable/middle_details"
          android:layout_marginTop="12dp"
          android:id="@+id/middle_item_detailsButton"
          app:layout_constraintTop_toBottomOf="@id/middle_timeButton"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline3" />
        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toEndOf="@id/middle_item_detailsButton"
          android:text="详情"
          app:layout_constraintBaseline_toBaselineOf="@id/middle_item_detailsButton"
          android:layout_marginStart="3dp"
          android:textSize="15sp" />
        <Button
          android:layout_width="22sp"
          android:layout_height="22sp"
          android:background="@drawable/middle_sign"
          android:layout_marginTop="12dp"
          android:id="@+id/middle_item_signButton"
          app:layout_constraintTop_toBottomOf="@id/middle_timeButton"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@id/middle_item_guideline4" />
        <androidx.appcompat.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintBaseline_toBaselineOf="@id/middle_item_signButton"
          app:layout_constraintStart_toEndOf="@id/middle_item_signButton"
          android:text="签到"
          android:layout_marginStart="3dp"
          android:textSize="15sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>