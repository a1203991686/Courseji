<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@drawable/view_shape">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
        <TextView
          android:id="@+id/leaveTypeText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="病假"
          android:textSize="17sp"
          android:textColor="@android:color/black"
          android:paddingLeft="10dp"
          android:paddingTop="11dp"
          android:paddingRight="10dp" />
        <TextView
          android:id="@+id/leaveBackText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="未销假"
          android:background="@drawable/leave_red_flag"
          android:textSize="15dp"
          android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="10dp"
      android:orientation="horizontal">

        <ImageView
          android:layout_width="14dp"
          android:layout_height="14dp"
          android:src="@mipmap/person" />

        <TextView
          android:id="@+id/leavePeopleText"
          android:layout_marginLeft="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:text="请假人" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="10dp"
      android:orientation="horizontal">

        <ImageView
          android:layout_width="14dp"
          android:layout_height="14dp"
          android:src="@mipmap/time" />

        <TextView
          android:id="@+id/leaveTimeText"
          android:layout_marginLeft="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:text="2020-12-2-22:10 至 2020年12-3-8:00" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="15dp"
      android:orientation="horizontal">
        <ImageView
          android:layout_width="17dp"
          android:layout_height="17dp"
          android:src="@mipmap/leave_situation" />
        <TextView
          android:id="@+id/leaveReasonText"
          android:layout_marginLeft="4dp"
          android:textSize="14sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="因为发烧感冒请假去医院" />
    </LinearLayout>


</LinearLayout>